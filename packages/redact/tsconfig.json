{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
//    "composite": true,
    "declaration": true,
//    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext"],
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "src",
//    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts"]
}

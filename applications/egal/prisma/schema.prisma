model Case {
  id       String @id @default(cuid())
  title    String
  notes    String
  clent    Client @relation(fields: [clientId], references: [id])
  clientId String
  dateCreated  DateTime  @default(now())
  dateUpdated  DateTime  @updatedAt
  case_history  CaseEvent[]
}

model CaseEvent {
  id       String @id @default(cuid())
  caseId   String
  case      Case   @relation(fields: [caseId], references: [id])
  type     String
  summary  String
  detail  String
  status  String
  dateCreated  DateTime  @default(now())
  dateUpdated  DateTime  @updatedAt
}

model Client {
  id              String @id @default(cuid())
  auth0_id        String @unique
  title           String
  first_name      String
  last_name       String
  email           String
  phone_number    String
  street_address  String
  city            String
  county          String
  post_code       String
  Case            Case[]
  dateCreated  DateTime  @default(now())
  dateUpdated  DateTime  @updatedAt
}
